@startuml database

title Database

entity users {
    * id
    ---
    * display_name
    * email
    * mainnet_address
    * oauth_token(s)
}

entity groups {
    * id
    ---
    * name
}

entity user_group_bridge {
    * user_id
    * group_id
}

entity bets {
    * id
    ---
    * group_id
    * title
    * description
    * address
    * close_time
    * resolved_time
}

entity votes {
    * id
    ---
    * user_id
    * proposition_id
    * vote
}

entity user_bet_results {
    * user_id
    * bet_id
    ---
    * hasWon
}

users <-- user_group_bridge
groups <-- user_group_bridge
bets --> groups
votes --> users
votes --> bets
user_bet_results --> users
user_bet_results --> bets

@enduml